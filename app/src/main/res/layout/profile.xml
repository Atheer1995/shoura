<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "0.8"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "0.5"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/name"
                android:text="يعرض الاسم " />

            <ImageView
                android:text="\nProfile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dip"
                android:textSize="30sp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:id="@+id/img"
                android:adjustViewBounds="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:textAlignment="center"
            android:gravity="center_vertical">

            <TextView
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/field"
                />

            <TextView
                android:text="الـمـجـال : "
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAlignment="viewEnd"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:textAlignment="center"
            android:gravity="center_vertical">

            <TextView
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/bio"
                />

            <TextView
                android:text="نــبــذة :"
                android:textSize="18sp"
                android:paddingRight="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textStyle="normal|bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1.5"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal">

            <Button
                android:text="الاستشارات المقدمة "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Providbutton" />

            <Button
                android:text="المحادثة الفورية "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Chatbutton" />

            <Button
                android:text="قدم سؤالك"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Qestionbutton"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>

</LinearLayout>